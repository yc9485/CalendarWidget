<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/btnMore"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nav_button_background"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/more_symbol"
            android:textAllCaps="false"
            android:textColor="@color/day_text_primary"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btnToday"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nav_button_background"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/today"
            android:textAllCaps="false"
            android:textColor="@color/day_text_primary"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/centerMonthNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPrev"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/nav_button_background"
                android:contentDescription="@string/previous_month"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/symbol_prev"
                android:textAllCaps="false"
                android:textColor="@color/day_text_primary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvMonthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:textColor="@color/day_text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/nav_button_background"
                android:contentDescription="@string/next_month"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/symbol_next"
                android:textAllCaps="false"
                android:textColor="@color/day_text_primary"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_sun"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_mon"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_tue"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_wed"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_thu"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_fri"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/day_sat"
            android:textColor="@color/day_text_muted"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridCalendar"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_marginTop="4dp"
        android:columnWidth="0dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_data"
        android:textColor="@color/day_text_muted"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
