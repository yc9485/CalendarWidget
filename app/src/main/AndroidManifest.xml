<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetCalendar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DateTodosActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <activity
            android:name=".EditTodoItemActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <activity
            android:name=".ImportExportActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <activity
            android:name=".WidgetActionsActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <activity
            android:name=".ManageCalendarsActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <activity
            android:name=".LanguageSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.WidgetCalendar.Dialog" />

        <receiver
            android:name=".CalendarWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="com.example.widgetcalendar.PREV_MONTH" />
                <action android:name="com.example.widgetcalendar.NEXT_MONTH" />
                <action android:name="com.example.widgetcalendar.TODAY" />
                <action android:name="com.example.widgetcalendar.MORE" />
                <action android:name="com.example.widgetcalendar.IMPORT" />
                <action android:name="com.example.widgetcalendar.EXPORT" />
                <action android:name="com.example.widgetcalendar.DATE_CLICK" />
                <action android:name="com.example.widgetcalendar.REMINDER_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/calendar_widget_info" />
        </receiver>

        <service
            android:name=".CalendarGridRemoteViewsService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>
